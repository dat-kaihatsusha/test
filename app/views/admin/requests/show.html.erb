<div class="request-wrapper">
        <div class="request-left">
            <div class="request-logo">
                <img src="https://cdn.shopify.com/s/files/1/0411/4717/0966/files/Horizontial-Logo-Black-100px.png?5756">
            </div>
            <div class="contact-info">
                <h2>Contact Information</h2>
                <div class="contact-infoBx">
                    <%= link_to gravatar_for(current_user, size: 60), current_user %>
                    <p><%= @admin_request.user.name %></p>
                    <p><%= @admin_request.user.email %></p>
                </div>
            </div>
            <div class="request-shipping">
                <h2>Shipping address</h2>
                <p><span>Adress:&nbsp;&nbsp;</span><%= @admin_request.address %></p>
                <p><span>Phone number:&nbsp;&nbsp;</span><%= @admin_request.phone %></p>
            </div>
        </div>
        <div class="request-right">
            <div class="request-rightBx">
                <div class="product-info">
                    <div class="product-name">
                        <%= image_tag @admin_request.product.image1 if @admin_request.product.image1.attached? %>
                        <div>
	                        <span><%= @admin_request.product.title %></span><br>
	                        <p><%= link_to "Product Detail", @admin_request.product %></p>
                        </div>
                    </div>
                    <div class="product-price">
                        <span>$<%= @admin_request.product.price %></span>
                    </div>
                </div>

                <div class="product-quantity">
                    <div class="product-quantityTx">
                        <span><%= t('form.label.quantity') %>: </span>
                    </div>
                    <div class="product-quantityBx">
                        <span><%= @admin_request.quantity %></span>
                    </div>
                </div>
                <div class="total">
                    <div class="totalTx">
                        <span>Total</span>
                    </div>
                    <div class="totalBx">
                        <p>USD&nbsp;<span><%= @admin_request.product.price * @admin_request.quantity %></span></p>
                    </div>
                </div>
                <%= link_to t('form.submit.delete'), @request , method: :delete, data: { confirm: "You sure?" } %>
            </div>
        </div>
    </div>