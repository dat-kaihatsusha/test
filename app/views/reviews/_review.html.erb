<div class="review-contentBx">
	<%= link_to(review_path(review)) do %>
		<div class="image">
			<%= image_tag review.image if review.image.attached? %>
		</div>
	<% end %>
	<%= link_to(review_path(review)) do %>
		<h2><%= review.title %></h2>
	<% end %>
	<span>Create at: <%= l(review.created_at, locale: :en) %></span>
	<p><%= review.description %></p>
	<% if current_user?(review.user) %>
		<%= link_to t('form.submit.delete'), review , method: :delete, data: { confirm: "You sure?" } %>
		<span style="margin-right: 20px;"></span>
		<%= link_to "Edit", edit_review_path(review) %>
	<% end %>
</div>
